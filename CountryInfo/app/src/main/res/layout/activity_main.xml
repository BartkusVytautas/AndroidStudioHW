<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#634D4D"
    tools:context=".MainActivity">

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="731dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Spinner
            android:id="@+id/countryList"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:spinnerMode="dialog" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <Button
            android:id="@+id/choosecoutry"
            android:layout_width="206dp"
            android:layout_height="64dp"
            android:background="#B69A9A"
            android:onClick="getCountryInfo"
            android:text="@string/countries" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2"
        tools:layout_editor_absoluteX="203dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/population"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Population"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="24sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tableRow3"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/continentq"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/continent"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Continent"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tableRow4"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/regionq"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/Region"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Region"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tableRow5"
        tools:layout_editor_absoluteX="232dp">

        <TextView
            android:id="@+id/surfq"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/surfaceArea"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/SurfaceArea"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="24sp" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>